{
  "extends": "./node_modules/electron-webpack/tsconfig-base.json",
  "compilerOptions": {
    "target": "esnext",
    "strict": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react",
    "baseUrl": "src",
    "paths": {
      "@common/*": ["common/*"],
      "@renderer/*": ["renderer/*"],
      "@main/*": ["main/*"],

      "@components/*": ["renderer/components/*"],
      "@views/*": ["renderer/views/*"],
    }
  },
  "exclude": [
    "node_modules"
  ]
}